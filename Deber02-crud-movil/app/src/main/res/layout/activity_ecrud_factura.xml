<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_sqlite_factura"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/input_id_factura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ID de la Factura"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/input_cliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Cliente"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/input_id_factura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/input_fecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Factura"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/input_cliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/input_descuento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descuento"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/input_fecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/input_pagada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Pagada (SÃ­/No)"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/input_descuento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_buscar_bdd_factura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buscar en BDD"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/input_pagada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_crear_bdd_factura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear en BDD"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_buscar_bdd_factura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_actualizar_bdd_factura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actualizar en BDD"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_crear_bdd_factura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_eliminar_bdd_factura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Eliminar en BDD"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_actualizar_bdd_factura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>