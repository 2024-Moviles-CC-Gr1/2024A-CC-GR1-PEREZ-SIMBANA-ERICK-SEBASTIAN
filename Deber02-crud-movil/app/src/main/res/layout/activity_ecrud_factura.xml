<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_sqlite_factura"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/input_id_factura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Factura"
        android:inputType="number" />

    <EditText
        android:id="@+id/input_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cliente"
        android:layout_below="@id/input_id_factura"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/input_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:layout_below="@id/input_cliente"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/input_descuento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descuento"
        android:layout_below="@id/input_fecha"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/input_pagada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pagada (SÃ­/No)"
        android:layout_below="@id/input_descuento"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_buscar_bdd_factura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Factura"
        android:layout_below="@id/input_pagada"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_crear_bdd_factura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Factura"
        android:layout_below="@id/btn_buscar_bdd_factura"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_actualizar_bdd_factura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Factura"
        android:layout_below="@id/btn_crear_bdd_factura"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_eliminar_bdd_factura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Factura"
        android:layout_below="@id/btn_actualizar_bdd_factura"
        android:layout_marginTop="8dp" />
</RelativeLayout>
